    <StackPanel Margin="15,10">
    <local:MyListItem Margin="0,1,0,1" ToolTip="继续浏览"
	Logo="pack://application:,,,/images/Blocks/GoldBlock.png" Title="确认" Info="继续浏览"
	EventType="打开帮助" EventData="https://mcnews.meloong.com/1.18_archive.json" Type="Clickable" />
    </StackPanel>
</local:MyCard>
</StackPanel>