<!--title=主页设置-->
<local:MyTextBox Visibility="Collapsed"><local:MyTextBox.Text>
    <Binding UpdateSourceTrigger="PropertyChanged" Mode="OneWayToSource"
    Path="VerticalScrollBarVisibility" RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType=local:MyScrollViewer, AncestorLevel=1}" 
    FallbackValue="Disabled"/></local:MyTextBox.Text></local:MyTextBox>
<local:MyTextBox Visibility="Collapsed"><local:MyTextBox.Text>
    <Binding UpdateSourceTrigger="PropertyChanged" Mode="OneWayToSource"
    Path="Margin" RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType=StackPanel, AncestorLevel=2}" 
    FallbackValue="20,0,0,0"/></local:MyTextBox.Text></local:MyTextBox>
<Grid>
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="180"/>
        <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
        <RowDefinition/>
        <RowDefinition MaxHeight="100"/>
    </Grid.RowDefinitions>

<StackPanel Margin="0,15,5,0" Grid.Column="0" Grid.Row="0">
    <local:MyCard Margin="0,0,0,15" CanSwap="False" >
        <local:MyCard.Inlines>
            主页设置
            <InlineUIContainer>
                <Border Background="{DynamicResource ColorBrush5}" CornerRadius="6">
                    <TextBlock FontSize="10" Margin="6,2" >
                        <TextBlock.Foreground>
                            <Binding Path="Foreground" RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType=TextBlock, AncestorLevel=1}"/>
                        </TextBlock.Foreground>
                        预览功能
                    </TextBlock>
                </Border>
            </InlineUIContainer>
        </local:MyCard.Inlines>
        <StackPanel Margin="25,40,23,15">
            <TextBlock TextWrapping="Wrap" Margin="0,0,0,4">
                主页设置是新闻主页的预览功能，在这里你可以按照自己的喜好调整主页的显示内容。
            </TextBlock>
            <TextBlock TextWrapping="Wrap" Margin="0,0,0,4">
                这些选项是正在测试的新功能，可能不稳定，也不代表最终成果，也可能随时取消。
            </TextBlock>
        </StackPanel>
    </local:MyCard>
    <local:MyCard Margin="0,0,0,15" CanSwap="False">
    <StackPanel Margin="15,5">
        <TextBlock x:Name="OutputTextBlock" Visibility="Collapsed">
            <TextBlock.Text>
                <MultiBinding StringFormat="{}https://pcl.mcnews.thestack.top/SaveChanges.json?skinbasic={0}&amp;skinnewra={1}&amp;editionstandard={2}&amp;editionlight={3}&amp;hidewip={4}&amp;"><Binding Path="Checked" ElementName="skinbasic"/><Binding Path="Checked" ElementName="skinnewra"/><Binding Path="Checked" ElementName="editionstandard"/><Binding Path="Checked" ElementName="editionlight"/><Binding Path="Checked" ElementName="hidewip"/></MultiBinding>
            </TextBlock.Text>
        </TextBlock>
        <local:MyButton IsEnabled="{Binding Path=Checked, ElementName=ConfirmCheckBox}"
                        Text="保存" ColorType="Highlight"
                        EventType="打开帮助" ToolTip="跳转到保存页面"
                        Height="40" Margin="0,10,0,10">
            <local:MyButton.EventData>
                <Binding Path="Text" ElementName="OutputTextBlock"/>
            </local:MyButton.EventData>
        </local:MyButton>
    </StackPanel>   
</local:MyCard>
</StackPanel>

<StackPanel Margin="0,15,5,0" Grid.Column="0" Grid.Row="1">
</StackPanel>



<local:MyScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Grid.Column="1" Grid.RowSpan="2">
    <local:MyScrollViewer.Height>
        <Binding
        Path="ActualHeight" RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType=local:MyPageRight, AncestorLevel=1}"/>
    </local:MyScrollViewer.Height>
<StackPanel Margin="15,0,15,0">
<local:MyCard Margin="0,15,0,15" CanSwap="False" Title="主页面">
    <StackPanel Margin="25,30,23,15"> 
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Row="0" Grid.Column="0" Height="50" Margin="10" BorderThickness="0.5" CornerRadius="6">
    <Border.BorderBrush>
        <Binding Path="Children[1].Stroke" ElementName="editionstandard"/>
    </Border.BorderBrush>
</Border>
<Border Grid.Row="0" Grid.Column="0" Height="50" Margin="10" CornerRadius="6" Opacity="0.2">
    <Border.Background>
        <Binding Path="Children[2].Fill" ElementName="editionstandard"/>
    </Border.Background>
</Border>
<local:MyRadioBox Grid.Row="0" Grid.Column="0" Checked="True" Height="50" Margin="20,10,10,10" x:Name="editionstandard">
    
                <Run>完整</Run>
                <LineBreak/>
                <Run FontSize="10">原汁原味的新闻主页体验</Run>
            
</local:MyRadioBox>
            <Border Grid.Row="0" Grid.Column="1" Height="50" Margin="10" BorderThickness="0.5" CornerRadius="6">
    <Border.BorderBrush>
        <Binding Path="Children[1].Stroke" ElementName="editionlight"/>
    </Border.BorderBrush>
</Border>
<Border Grid.Row="0" Grid.Column="1" Height="50" Margin="10" CornerRadius="6" Opacity="0.2">
    <Border.Background>
        <Binding Path="Children[2].Fill" ElementName="editionlight"/>
    </Border.Background>
</Border>
<local:MyRadioBox Grid.Row="0" Grid.Column="1" Checked="False" Height="50" Margin="20,10,10,10" x:Name="editionlight">
    
                <Run>精简</Run>
                <LineBreak/>
                <Run FontSize="10">只保留最新版本的链接，性能更高</Run>
            
</local:MyRadioBox>
        </Grid>
    </StackPanel>
</local:MyCard>

<local:MyCard Margin="0,0,0,15" CanSwap="False" Title="皮肤">
    <StackPanel Margin="25,30,23,15"> 
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Border Grid.Row="1" Grid.Column="0" Height="50" Margin="10" BorderThickness="0.5" CornerRadius="6">
    <Border.BorderBrush>
        <Binding Path="Children[1].Stroke" ElementName="skinbasic"/>
    </Border.BorderBrush>
</Border>
<Border Grid.Row="1" Grid.Column="0" Height="50" Margin="10" CornerRadius="6" Opacity="0.2">
    <Border.Background>
        <Binding Path="Children[2].Fill" ElementName="skinbasic"/>
    </Border.Background>
</Border>
<local:MyRadioBox Grid.Row="1" Grid.Column="0" Checked="True" Height="50" Margin="20,10,10,10" x:Name="skinbasic">
    
                <Run>基础</Run>
            
</local:MyRadioBox>
            <Border Grid.Row="1" Grid.Column="1" Height="50" Margin="10" BorderThickness="0.5" CornerRadius="6">
    <Border.BorderBrush>
        <Binding Path="Children[1].Stroke" ElementName="skinnewra"/>
    </Border.BorderBrush>
</Border>
<Border Grid.Row="1" Grid.Column="1" Height="50" Margin="10" CornerRadius="6" Opacity="0.2">
    <Border.Background>
        <Binding Path="Children[2].Fill" ElementName="skinnewra"/>
    </Border.Background>
</Border>
<local:MyRadioBox Grid.Row="1" Grid.Column="1" Checked="False" Height="50" Margin="20,10,10,10" x:Name="skinnewra">
    
                <Run>通透</Run>
            
</local:MyRadioBox>
            <local:MyImage Grid.Column="0" Grid.Row="0" Source="https://s21.ax1x.com/2025/08/03/pVNbeg0.png" Margin="10,5"/>
            <local:MyImage Grid.Column="1" Grid.Row="0" Source="https://s21.ax1x.com/2025/08/03/pVNb359.png" Margin="10,5"/>
        </Grid>
    </StackPanel>
</local:MyCard>

<local:MyCard Margin="0,0,0,15" CanSwap="False" Title="杂项">
    <StackPanel Margin="25,40,23,15"> 
        <local:MyCheckBox Text="隐藏“正在翻译中”动画" x:Name="hidewip" Checked="False"/>
    </StackPanel>
</local:MyCard>

</StackPanel>
</local:MyScrollViewer>
</Grid>