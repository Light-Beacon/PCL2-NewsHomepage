            <TransformGroup>
                <ScaleTransform x:Name="Fu1S"/>
                <SkewTransform/>
                <RotateTransform Angle="45" x:Name="Fu1Angle"/>
                <TranslateTransform/>
            </TransformGroup>
          </Image.RenderTransform>
        </Image>
        <TextBlock Text="过" Grid.Column="0" x:Name="T1"/>
        <Image Source="https://image.stapxs.cn/i/2024/02/09/fu.png" MaxHeight="80" RenderTransformOrigin="0.5,0.5" Grid.Column="1" x:Name="FuImg" Opacity="0">
          <Image.RenderTransform>
            <TransformGroup>
                <ScaleTransform x:Name="FuS"/>
                <SkewTransform/>
                <RotateTransform Angle="45" x:Name="FuAngle"/>
                <TranslateTransform x:Name="FuPos"/>
            </TransformGroup>
          </Image.RenderTransform>
        </Image>
        <TextBlock Text="年" Grid.Column="1" x:Name="T2"/>
        <Image Source="https://image.stapxs.cn/i/2024/02/09/fu.png" MaxHeight="80" RenderTransformOrigin="0.5,0.5" Grid.Column="2" x:Name="FuImg2" Opacity="0" HorizontalAlignment="Left">
