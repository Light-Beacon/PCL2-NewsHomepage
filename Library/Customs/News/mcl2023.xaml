<local:MyCard Margin="0,0,0,15" Title="Minecraft Live 2023" CanSwap="True">
  <StackPanel Margin="0,38,0,20">
<StackPanel Width="1000" HorizontalAlignment="Center">
  <Line X1="0" X2="1" Stroke="{DynamicResource ColorBrush4}" StrokeThickness="3" HorizontalAlignment="Center" Stretch="Fill"/>
  <Image Height="230" MinWidth="1000" Stretch="UniformToFill" Source="https://z1.ax1x.com/2023/09/17/pPhN9FH.jpg"/>
  <Line X1="0" X2="1" Stroke="{DynamicResource ColorBrush4}" StrokeThickness="3" HorizontalAlignment="Center" Stretch="Fill"/>
</StackPanel>
<Border Style="{StaticResource verTxtBdr}">
  <TextBlock Style="{StaticResource verTxtBlk}" Text="MINECRAFT LIVE" />
</Border>
<StackPanel Margin="30,5">
  <TextBlock FontSize="16" HorizontalAlignment="Center" Text="今年的 Minecraft Live"/>
  <TextBlock FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Text="已结束，更多消息将在之后更新"/>
  <TextBlock HorizontalAlignment="Center" Text="生物投票结果 已公布"/>
  <StackPanel>
			<Border Margin="10" Background="#DDDDDD" CornerRadius="5" Padding="5">
			<Grid UseLayoutRounding="True">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"></ColumnDefinition>
					<ColumnDefinition Width="*"></ColumnDefinition>
					<ColumnDefinition Width="*"></ColumnDefinition>
				</Grid.ColumnDefinitions>
				<Border Background="#3D3D3F" Grid.Column="0" Margin="2" Padding="0,0,0,5" CornerRadius="5">
					<local:MyButton EventData="https://www.bilibili.com/video/BV1Mh4y167u2" EventType="打开网页" ToolTip="点击打开B站观看视频">
					<Border Background="#666668" CornerRadius="5" Padding="5">
					<StackPanel Margin="0,5">
						<Image Source="https://z1.ax1x.com/2023/10/06/pPXXrWD.jpg" Margin="1,1,1,6" Height="70" Stretch="UniformToFill"/>
						<TextBlock Text="螃蟹" Foreground="#3D3D3F" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold"/>
						<StackPanel Margin="5">
						<TextBlock Text="  生成在红树林生物群系" Foreground="#3D3D3F" FontFamily="KaiTi" FontSize="14" Margin="0,2"/>
						<TextBlock Text="  玩家使用它的钳子可以在远处放置方块" Foreground="#3D3D3F" FontFamily="KaiTi" FontSize="14" Margin="0,2"/>
					</StackPanel>
          </StackPanel>
					</Border>
					</local:MyButton>
				</Border>
				<Border Background="#4b3317" Grid.Column="1" Margin="2" Padding="0,0,0,5" CornerRadius="5">
					<local:MyButton EventData="https://www.bilibili.com/video/BV1qC4y1L7CE" EventType="打开网页" ToolTip="点击打开B站观看视频">
					<Border Background="#ffaf52 " CornerRadius="5" Padding="5">
						<StackPanel Margin="0,5">
							<Image Source="https://z1.ax1x.com/2023/10/06/pPXXddx.jpg" Margin="1,1,1,6" Height="70" Stretch="UniformToFill"/>
							<TextBlock Text="犰狳" Foreground="#4b3317" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold"/>
							<StackPanel Margin="5">
								<TextBlock Text="  生成在热带草原生物群系" Foreground="#4b3317" FontFamily="KaiTi" FontSize="14" Margin="0,2"/>
								<TextBlock Text="  在受惊吓时会缩成一个球" Foreground="#4b3317" FontFamily="KaiTi" FontSize="14" Margin="0,2"/>
								<TextBlock Text="  其掉落物可以用于制作狼铠保护你的狼（狗）" Foreground="#4b3317" FontFamily="KaiTi" FontSize="14" Margin="0,2"/>
								<TextBlock Text="（科普：其名字发音为 qiú yú）" Foreground="#4b3317" FontFamily="KaiTi" FontSize="14" Margin="0,2"/>
							</StackPanel>
						</StackPanel>
					</Border>
					</local:MyButton>
				</Border>
				<Border Background="#3D3D3F" Grid.Column="2" Margin="2" Padding="0,0,0,5" CornerRadius="5">
					<local:MyButton EventData="https://www.bilibili.com/video/BV1zj411b7ed" EventType="打开网页" ToolTip="点击打开B站观看视频">
					<Border Background="#666668" CornerRadius="5" Padding="5">
						<StackPanel Margin="0,5">
							<Image Source="https://z1.ax1x.com/2023/10/06/pPXXYQJ.jpg" Margin="1,1,1,6" Height="70" Stretch="UniformToFill"/>
							<TextBlock Text="企鹅" Foreground="#3D3D3F" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold"/>
							<StackPanel Margin="5">
							<TextBlock Text="  生成在石岸生物群系" Foreground="#3D3D3F" FontFamily="KaiTi" FontSize="14" Margin="0,2"/>
							<TextBlock Text="  群居生物，水陆两栖" Foreground="#3D3D3F" FontFamily="KaiTi" FontSize="14" Margin="0,2"/>
							<TextBlock Text="  能使你的船划得更快" Foreground="#3D3D3F" FontFamily="KaiTi" FontSize="14" Margin="0,2"/>
							</StackPanel>
						</StackPanel>
					</Border>
					</local:MyButton>
				</Border>
			</Grid>
			</Border>
		</StackPanel>
    <TextBlock Text="1.21 更新内容" Style="{StaticResource h2}" />
		  <StackPanel Style="{StaticResource ListStyle}">
			<Ellipse />
			<TextBlock Style="{StaticResource ListItem}" Text="新结构 Trail Camber" />
				<StackPanel Style="{StaticResource ListStyle}">
				<Ellipse />
				<TextBlock Style="{StaticResource ListItem}" Text=" 在其中有试炼刷怪笼，根据玩家的数量生成对应数量等级的怪物，打过一波敌人后有战利品。刷怪笼在刷出下一波敌人前会进入冷却并冒出烟雾效果" />
				<Ellipse />
				<TextBlock Style="{StaticResource ListItem}" Text=" 其中有奖励箱" />
				<Ellipse />
				<TextBlock Style="{StaticResource ListItem}" Text=" 其结构包括一些新的装饰方块，如铜门、铜灯等，它们会随着时间氧化" />
				<Ellipse />
				<TextBlock Style="{StaticResource ListItem}" Text=" 在其中会刷新出新敌对生物 Breeze，会使用风爆攻击玩家，其攻击产生的爆炸会使爆炸中的一些方块的开关状态改变（如开关活板门）" />
		  </StackPanel>
			<Ellipse />
			<TextBlock Style="{StaticResource ListItem}" Text=" 新方块：合成器，通过漏斗输入后能自动合成物品" />
			<Ellipse />
			<TextBlock Style="{StaticResource ListItem}" Text=" 新方块：铜灯，随着逐渐被氧化会降低亮度" />
			<Ellipse />
			<TextBlock Style="{StaticResource ListItem}" Text=" 新生物：犰狳，投票获胜生物" />
		</StackPanel>
  </StackPanel>
</StackPanel>
</local:MyCard>