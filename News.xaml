      <Style x:Key="footnote" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Padding" Value="30,0" />
        <Setter Property="Margin" Value="0,20,0,15" />
        <Setter Property="Foreground" Value="#FF777777" />
